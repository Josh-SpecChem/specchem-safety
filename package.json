{
  "name": "specchem-safety",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "type-check": "tsx scripts/type-check.ts",
    "type-check:watch": "tsx scripts/type-check.ts --watch",
    "type-check:strict": "tsx scripts/type-check.ts --strict",
    "type-check:ci": "tsx scripts/type-check.ts --ci --strict",
    "type-check:verbose": "tsx scripts/type-check.ts --verbose",
    "lint": "eslint . --cache",
    "lint:strict": "eslint . --max-warnings=0 --cache",
    "format": "prettier --write .",
    "precommit:fast": "pretty-quick --staged && eslint --cache --ext .ts,.tsx --max-warnings=0",
    "verify": "npm run type-check && npm run lint",
    "verify:strict": "npm run type-check:strict && npm run lint:strict",
    "verify:ci": "npm run type-check:ci && npm run lint:strict",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integrations": "vitest run --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "test:contracts": "tsx scripts/test-contracts.ts",
    "docs:audit": "node scripts/audit-documentation.js",
    "docs:standardize": "node scripts/standardize-headers.js",
    "docs:maintain": "node scripts/maintain-documentation.js",
    "docs:cleanup": "bash scripts/cleanup-temporary-files.sh",
    "generate-docs": "tsx scripts/generate-docs.ts",
    "maintain-docs": "tsx scripts/maintain-docs.ts",
    "review-docs": "tsx scripts/review-docs.ts",
    "validate-docs": "tsx scripts/maintain-docs.ts validate",
    "setup-docs-automation": "tsx scripts/setup-docs-automation.ts",
    "validate-types": "node scripts/validate-types.js",
    "audit-types": "node scripts/audit-types.js",
    "validate-config": "node scripts/validate-config.js",
    "db:seed": "node scripts/seed-database.js",
    "db:verify": "node scripts/verify-database.js",
    "db:migrate": "drizzle-kit push",
    "validate-env": "tsx scripts/validate-env.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.542.0",
    "next": "15.5.0",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.19.18",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "pg": "^8.16.3",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
